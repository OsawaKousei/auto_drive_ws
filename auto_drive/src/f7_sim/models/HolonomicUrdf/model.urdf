
<robot name="HolonomicUrdf" xmlns:xacro="http://ros.org/wiki/xacro">

    <link name="base_footprint"/>

    <link name="base_link">
        <inertial>
            <mass value="100.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="10.416666666666668" ixy="0.0" ixz="0.0" iyy="10.416666666666668" iyz="0.0" izz="16.666666666666668"/>
        </inertial>
        <visual>
            <geometry>
                <box size="1 1 0.5"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue">
            <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child  link="base_link"/>
    </joint>

    <link name="wheel_base">
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="233333.333333" ixy="0.0" ixz="0.0" iyy="233333.333333" iyz="0.0" izz="450000"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.3"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="red">
            <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <joint name="wheel_base_joint" type="continuous">
        <parent link="base_link"/>
        <child  link="wheel_base"/>

        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel">
        <inertial>
            <mass value="0.0000001"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="2.333333" ixy="0.0" ixz="0.0" iyy="2.333333" iyz="0.0" izz="4.5"/>
        </inertial>
        <visual>
            <geometry>
                <cylinder length="0.001" radius="0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="red">
            <color rgba="1.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.001" radius="0.2"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
    </link>

    <joint name="wheel_joint" type="continuous">
        <parent link="wheel_base"/>
        <child  link="wheel"/>

        <origin xyz="0 0 -0.1" rpy="-1.57 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <xacro:macro name="caster_macro" params="suffix parent radius x y z">
        <link name="${suffix}_link">
            <inertial>
                <mass value="0.3"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia ixx="3600000" ixy="0.0" ixz="0.0" iyy="3600000" iyz="0.0" izz="3600000"/>
            </inertial>
            <visual>
                <geometry>
                    <sphere radius="${radius}"/>
                </geometry>
                <material name="red"/>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="${radius}"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </collision>
        </link>

        <joint name="${suffix}_joint" type="fixed">
            <origin rpy="0 0 0" xyz="${x} ${y} ${z}"/>
            <parent link="${parent}"/>
            <child  link="${suffix}_link"/>
        </joint>
    </xacro:macro>  

    <xacro:caster_macro suffix="caster1" parent="base_link" radius="0.05" x="0.5" y="0.5" z="-0.25"/>
    <xacro:caster_macro suffix="caster2" parent="base_link" radius="0.05" x="0.5" y="-0.5" z="-0.25"/>
    <xacro:caster_macro suffix="caster3" parent="base_link" radius="0.05" x="-0.5" y="0.5" z="-0.25"/>
    <xacro:caster_macro suffix="caster4" parent="base_link" radius="0.05" x="-0.5" y="-0.5" z="-0.25"/>
    
    <gazebo>
        <!-- Global odometer -->
        <plugin
            filename="ignition-gazebo-odometry-publisher-system"
            name="ignition::gazebo::systems::OdometryPublisher">
            <odom_publish_frequency>50</odom_publish_frequency>
            <odom_topic>/odom</odom_topic>
            <odom_frame>odom</odom_frame>
            <robot_base_frame>base_footprint</robot_base_frame>
            <tf_topic>/odom/tf</tf_topic>
        </plugin>

        <!-- Joint state publisher -->
        <plugin filename="libignition-gazebo-joint-state-publisher-system.so" 
            name="ignition::gazebo::systems::JointStatePublisher">
            <topic>joint_states</topic>
        </plugin>

        <plugin filename="libHolonomicPlugin.so" name="holonomic_sim::HolonomicPlugin">
            <wheel_joint>wheel_joint</wheel_joint>
            <base_joint>wheel_base_joint</base_joint>
        </plugin>
    </gazebo>
</robot>